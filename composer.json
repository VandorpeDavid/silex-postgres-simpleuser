{
    "name": "jasongrimes/silex-postgres-simpleuser",
    "type": "library",
    "description": "A simple postgres database-backed user provider for Silex, with associated services and controllers.",
    "keywords": ["silex", "user", "user provider", "simple user provider", "postgres", "postgresql"],
    "homepage": "https://github.com/VandorpeDavid/silex-postgres-simpleuser",
    "authors": [
        {
            "name": "Jason Grimes",
            "email": "jason@grimesit.com"
        },
        {
            "name": "David Vandorpe",
            "email": "david.vandorpe@wina.ugent.be"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "silex/silex": "~1.0",
        "symfony/security": "~2.3",
        "doctrine/dbal": "~2.4",
        "symfony/twig-bridge": "~2.3",
        "jasongrimes/paginator": "~1.0",
        "swiftmailer/swiftmailer": "~5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.2",
        "ext-pdo_pgsql": "*"
    },
    "autoload": {
        "psr-0": {"SimpleUser": "src/"}
    },
    "autoload-dev": {
        "psr-0": {"SimpleUser\\Tests": "tests/"}
    }

}
